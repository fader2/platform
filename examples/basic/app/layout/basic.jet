        <div class="uk-navbar-content uk-navbar-flip">
            <div class="uk-navbar-content uk-text-muted"></div>
            <ul class="uk-navbar-nav">
                <li class="uk-navbar-content">
                    <form class="uk-form uk-margin-remove uk-display-inline-block" action="/console/sessions/logout" method="post">
                        <button class="uk-button uk-button-link"><a href="#">Logout</a></button>
                    </form>
                </li>
            </ul>
        </div>
        
        <div class="uk-navbar-content"><a href="/" target="_blank">Go to site</a></div>
