    <div class="uk-width-medium-1-2 uk-container uk-container-center uk-text-center uk-margin">Example - basic</div>

    <div class="uk-width-1-2 uk-container uk-container-center">
        {{yield body()}}
    </div>
    
    <footer style="padding: 120px 0;">
