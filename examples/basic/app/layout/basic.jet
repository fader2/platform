    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="shortcut icon" href="/static/img/favicon.ico" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/2.27.4/css/uikit.almost-flat.min.css" />

    <title>{{yield title()}}</title>
    {{yield inlineFragment(section="head", wrap=false)}}
</head>
<body>
    <nav class="uk-navbar">
        <a class="uk-navbar-brand" href="/">Index</a>
        <ul class="uk-navbar-nav">
            <li class=""><a href="/item1">Item1</a></li>
            {{yield inlineFragment(section="navbar_menu_items")}}
